<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item">

    <TextView
        android:id="@+id/tvMaVTThemPhieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1eb729"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintRight_toLeftOf="@id/tvTenVTThemPhieu"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/tvTenVTThemPhieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvMaVTThemPhieu"
        app:layout_constraintRight_toLeftOf="@id/tvSLVTThemPhieu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSLVTThemPhieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvTenVTThemPhieu"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>